@page "/Vacuna"




<div class="main">
   <div class="texto">
   <h2>Vacunados por marca de Vacunas</h2>
   <p>Aqui se mostrara una tabla con todas las vacunas registradas en el sistema con la cantidad de personas que se han
      vacunado con la misma.</p>
   </div>


<div class="page">
    
 
  <div class="container">
    

   <table class="table table-bordered">

   <thead>

         <tr>
       
             <th>Marca</th>
             <th>Cantdad restante</th>
             <th>Vacunados</th>
        
         </tr>

   </thead> 
   <tbody class="tbody">
        
        
        @foreach (Vaccines v in vaccines)
        {            <tr>             
                <td>@v.Name</td>
                <td>@v.Amounted</td>
                <td>@c.Records.Where(r=>r.Vaccine == v.Id).Count()</td>        
            </tr>
            
        }
        
   </tbody>
 
</table>
</div>
</div>
</div>
@code{
        vaccineContext c = new vaccineContext();

    string campo = "";

    List<Vaccines> vaccines = new vaccineContext().Vaccines.ToList();

   
    
}